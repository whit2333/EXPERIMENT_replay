#/bin/bash
#set -u

run_number=3566
work_dir=

print_the_help() {
  echo "Usage: hallc_config [options]"
  echo " options: "
  echo "         -r,--run          print last run number"
  echo "         -d,--dir          print the replay directory"
  echo "         -S,--singularity  Download or update singularity image"
  echo "         -h,--help         print this help"
  exit 
}

print_latest_run() {
  echo "print_latest_run not yet implemented." >&2
}

download_singularity_image() {
  pushd "@HALLC_REPLAY_DIR@"
  singularity pull --name cool_halls.simg shub://whit2333/cool_halls   # pull with custom name
  popd
}

POSITIONAL=()
while [[ $# -gt 0 ]]
do
  key="$1"
  case $key in
    -h|--help)
      shift # past argument
      print_the_help
      ;;
    -S|--singularity)
      download_singularity_image
      shift;
      ;;
    -r|--run)
      print_latest_run
      #run_number="$2"
      #shift # past argument
      shift # past value
      ;;
    -d|--dir)
      echo "@HALLC_REPLAY_DIR@"
      #work_dir="$2"
      #shift # past argument
      shift # past value
      ;;
    -a|--all)
      #log_all_plots=1
      shift # past argument
      #shift # past value
      ;;
    *)    # unknown option
      #POSITIONAL+=("$1") # save it in an array for later
      echo "unknown option $1"
      print_the_help
      shift # past argument
      ;;
  esac
done
set -- "${POSITIONAL[@]}" # restore positional parameters


